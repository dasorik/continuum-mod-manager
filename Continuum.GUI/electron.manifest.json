{
  "executable": "Continuum.GUI",
  "splashscreen": {
    "imageFile": "wwwroot/img/splash.svg"
  },
  "name": "ContinuumModManager",
  "author": "Dasorik",
  "singleInstance": false,
  "build": {
    "appId": "com.continuum.dasorik.app",
    "productName": "Continuum Mod Manager",
    "copyright": "Copyright Â© 2022",
    "buildVersion": "1.2.0",
    "compression": "maximum",
    "directories": {
      "buildResources": "resources",
      "output": "../../../bin/Desktop"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "win": {
      "icon": "./bin/wwwroot/icons/icon.ico"
    },
    "linux": {
      "icon": "./bin/wwwroot/icons"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      },
      {
        "from": "../../../Tools",
        "to": "tools",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}